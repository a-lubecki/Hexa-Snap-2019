<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="testshare.com.testshare.MainActivity">

    <Button
        android:id="@+id/buttonShareText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE TEXT"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/buttonShareUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE URL"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonShareText"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/buttonShareBitmapOld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE BITMAP OLD"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonShareUrl"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonShareBitmapNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE BITMAP NEW"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonShareBitmapOld"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonShareAllNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHARE ALL NEW"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonShareBitmapNew"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
